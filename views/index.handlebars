{{else}} {{!-- 網址輸入介面 --}}
{{!-- 網址輸入欄 --}}
<div class="d-flex justify-content-center bg-light">
  <form action="/" method="post">
    {{!-- type選擇url，會強制使用者輸入的網址帶有http://，之後再能往下進行轉址--}}
    <input type="url" name="originalURL" placeholder="http://..." aria-label="url..."
      aria-describedby="transfer-button">
    <div class="mt-3" align="center"> {{!-- 按扭置中 --}}
      <button class="btn btn-success" type="submit" id="transfer-button"> 轉換 </button>
    </div>
  </form>
</div>






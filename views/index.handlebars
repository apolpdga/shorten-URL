{{!-- 介面切換 --}}
{{#if shorted_url}} {{!-- 短網址介面 --}}
<div class="d-flex justify-content-center bg-light">
  <a href="{{origin}}/{{shorted_url}}">
    <font id="copy" size="5" color="blue" face="Arial">{{origin}}/{{shorted_url}}</font>
  </a>
</div>

<div class="d-flex justify-content-center bg-light mt-3">
  <button type="button" onclick="copyEvent('copy')">Copy</button>
  <script>
    function copyEvent(id) {
      const str = document.getElementById(id);
      window.getSelection().selectAllChildren(str);
      document.execCommand("Copy")
    }
  </script>
